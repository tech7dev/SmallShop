<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/txtPV"
            android:text="ProductName" />

        <TextView
            android:id="@+id/txtStockState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/txtProductName"
            android:text="état en stock" />

        <TextView
            android:id="@+id/txtPV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@id/sep"
            android:paddingRight="10dp"
            android:text="PV" />

        <!--
        android:background="@drawable/green_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
        -->

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="true"

            android:text="Quantité" />

        <TextView
            android:id="@+id/sep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="22sp"
            android:layout_toStartOf="@id/txtQuantity"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="|" />

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toStartOf="@id/txtQuantity"
            android:layout_below="@id/txtPV"
            android:layout_marginRight="30dp"
            android:text="PV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:layout_below="@id/txtQuantity"
            android:layout_alignParentEnd="true"
            android:text="Quantité" />
    </RelativeLayout>

</android.support.v7.widget.CardView>